@if (this.Hidden)
{
    <Image WidthRequest="60"></Image>
}
else
{
    <ImageButton Source="@ImageSource.FromFile(ImageFile)" WidthRequest="60" OnClick="OnClick" />   
}

@code {
    [Parameter]
    public Card Card { get; set; } = null;

    [Parameter]
    public bool Hidden { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    public string ImageFile => this.Card != null ? $"{this.Card.Type}{this.Card.Suit}.png" : "Back.png";
}
